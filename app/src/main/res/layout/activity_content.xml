<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:scaleType="fitXY"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/daynight_backColor"
        tools:context="ru.mobile.activities.ContentActivity">

    <VideoView
            android:id="@+id/simpleVideoView"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:keepScreenOn="true"
            app:layout_constraintBottom_toBottomOf="@+id/base_menu_fragment_container_view"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="NotSibling"/>
    <ImageView
            android:id="@+id/play_start_img"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:padding="5dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:background="@drawable/button_round_while_trans"
            android:src="@drawable/baseline_play_arrow_24"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

    <LinearLayout
            android:id="@+id/content_linear_layout"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <ImageButton
                android:layout_width="20pt"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/baseline_more_vert_white_36"
                android:layout_gravity="end"
                android:background="@android:color/transparent"
                android:translationZ="90pt"
                android:id="@+id/content_delete"/>
        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-40dp"
                android:layout_marginBottom="40dp"
                android:background="@color/daynight_backColor">
            <ScrollView
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/scrollView3"
                    android:background="@color/daynight_backColor">
                <ImageButton
                        android:background="@color/daynight_backColor"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="true"
                        android:scaleType="fitXY"
                        app:srcCompat="@drawable/post1"
                        app:layout_constraintDimensionRatio="H,9:18"
                        android:id="@+id/content_image"/>
            </ScrollView>
            <LinearLayout
                    android:id="@+id/content_send_to_layout"
                    android:orientation="vertical"
                    android:layout_alignParentTop="true"
                    android:background="#7000"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/content_search_name_editText"
                    android:background="@drawable/button_border_white"
                    android:hint="@string/label_subscribers_enter_name"
                    android:paddingLeft="10dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginTop="45dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"/>
                <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="30dp"
                        android:layout_marginEnd="30dp"
                        android:layout_marginTop="10dp">
                    <!--/ru.rambler.libs.swipe_layout.SwipeLayout-->
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                    android:id="@+id/content_chat_layout"
                    android:orientation="vertical"
                    android:layout_alignParentTop="true"
                    android:background="#7000"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                <EditText
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:inputType="textPersonName"
                        android:ems="10"
                        android:id="@+id/content_comment_editText"
                        android:background="@drawable/button_border_white"
                        android:hint="@string/label_comment"
                        android:paddingLeft="10dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginTop="45dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"/>
                <ScrollView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/content_chat_message_scrollView"
                        android:layout_marginBottom="45dp">
                    <LinearLayout
                            android:id="@+id/content_chat_message_layout"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="30dp"
                            android:layout_marginEnd="30dp"
                            android:layout_marginTop="10dp"
                            android:paddingBottom="45dp">
                    </LinearLayout>
                </ScrollView>
            </LinearLayout>
        </RelativeLayout>
        <TextView
                android:id="@+id/content_user_name"
                android:text="Test"
                android:textAllCaps="false"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:background="@android:color/transparent"
                android:layout_width="wrap_content"
                android:layout_height="29dp"
                android:shadowDx="3"
                android:shadowDy="3"
                android:shadowRadius="6"
                android:shadowColor="@color/black"
                android:gravity="bottom"
                android:layout_gravity="bottom"
                android:layout_marginStart="20dp"
                android:layout_marginTop="-90dp"
                android:translationZ="90pt"
        />
    </LinearLayout>
    <androidx.fragment.app.FragmentContainerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:gravity="bottom"
            android:name="ru.mobile.fragments.BaseMenuFragment"
            android:id="@+id/base_menu_fragment_container_view"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
    />
</androidx.constraintlayout.widget.ConstraintLayout>
